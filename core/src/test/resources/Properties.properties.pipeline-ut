# Questo file di Properties contiene i parametri di
# configurazione del Servizio

# Endpoint Servizi

parrot.api=http://docker:8090/parrot/


# Sezione dedicata alla configurazione degli eventi
# 
# galileo.service.name					Il nome del servizio
# galileo.event.publish.topic			Nome del topic Kafka di pubblicazione degli eventi
# galileo.event.subscribe.topic			Nome del topic Kafka di sottoscrizione degli eventi
# galileo.event.enqueue.enabled			Se attivare o meno l'accodamento dei messaggi in Kafka
# galileo.event.dequeue.enabled			Se attivare o meno lo scodamento dei messaggi da Kafka
# galileo.event.processing.enabled		Se attivare o meno il processing dei messaggi da EventIn
# galileo.event.kafka.hostname			Hostname Kafka Broker
# galileo.event.kafka.port				Port Kafka Broker

galileo.service.name=galeve
galileo.event.publish.topic=galileo
galileo.event.subscribe.topic=galileo
galileo.event.enqueue.enabled=true
galileo.event.dequeue.enabled=false
galileo.event.processing.enabled=false
galileo.action.enqueue.enabled=true
galileo.action.dequeue.enabled=false

galileo.event.kafka.hostname=kafka
galileo.event.kafka.port=9092